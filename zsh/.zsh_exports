#!/bin/sh

# Personal information
export EMAIL="your-email@example.com"
export FULL_NAME="Morphy Kuffour"

# colored man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'


export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_BIN_HOME="$HOME/.local/bin"
export XDG_DATA_HOME="$HOME/.local/share"

export PATH="$HOME/.local/bin":$PATH
export PATH="$HOME/bin":$PATH
export PATH="/var/lib/flatpak/exports/share":$PATH
export PATH="$HOME/.local/share/flatpak/exports/share":$PATH
export PATH="/opt/homebrew/opt/arm-none-eabi-gcc@9/bin:$PATH"
export PATH="/opt/homebrew/opt/arm-none-eabi-binutils/bin:$PATH"
export LDFLAGS="-L/opt/homebrew/opt/arm-none-eabi-gcc@9/lib"
# export MANPAGER='nvim +Man!'
# export MANWIDTH=999
export FZF_DEFAULT_COMMAND='rg --hidden -l ""'

export EDITOR=nvim
export VISUAL=nvim
export TERMINAL=kitty
# export FILE=caja TODO use caja-dropbox
export FILE=ranger

export PATH=$HOME/.cargo/bin:$PATH
export PATH=$HOME/.local/share/go/bin:$PATH
# export GOPATH=$HOME/.local/share/go

export GOPATH=$HOME/go
# export GOROOT="$(brew --prefix golang)/libexec"
export PATH="$PATH:${GOPATH}/bin:${GOROOT}/bin"

# andriod tools
export PATH="$HOME/tmp/platform-tools:$PATH"

export DOTFILES=$HOME/dots
export PATH=$PATH:/usr/local/go/bin

# macOS-specific Homebrew paths
if [[ "$(uname -s)" == "Darwin" ]]; then
    export PATH="/opt/homebrew/bin:$PATH"
    export PATH="/opt/homebrew/sbin:$PATH"
    export PKG_CONFIG_PATH="/opt/homebrew/opt/libxml2/lib/pkgconfig"
    export PATH="/opt/homebrew/opt/gnu-sed/libexec/gnubin:$PATH"
fi

export PATH="/usr/local/bin:$PATH"
# export VAGRANT_DEFAULT_PROVIDER=libvirt
export LESSHISTFILE=-
export QMK_HOME="$HOME/.qmk_firmware"
export GEM_HOME="$HOME/.local/share/gem/ruby/2.7.0"
# export QMK_HOME="$HOME/.qmk_firmware"
# export GEM_HOME="$HOME/.local/share/gem/ruby/2.7.0"
export ZSH_SYSTEM_CLIPBOARD_TMUX_SUPPORT='true'
export LESSHISTFILE=-
export MCFLY_KEY_SCHEME=vim
export STARSHIP_CONFIG='$HOME/.config/starship/starship.toml'

# macOS-specific PKG_CONFIG_PATH with Cellar and X11
if [[ "$(uname -s)" == "Darwin" ]]; then
    export PKG_CONFIG_PATH=/usr/local/Cellar/zlib/1.2.8/lib/pkgconfig:/usr/local/lib/pkgconfig:/opt/X11/lib/pkgconfig
fi

export NODE_PATH="$HOME/Downloads/node-v16.15.1-linux-x64/lib/node_modules"

# NVM lazy loading - speeds up shell startup significantly
export NVM_DIR="$HOME/.nvm"
# Lazy load nvm - only load when first used
if [ -s "$NVM_DIR/nvm.sh" ]; then
  # Add nvm bins to PATH without loading nvm
  [ -d "$NVM_DIR/versions/node" ] && export PATH="$NVM_DIR/versions/node/$(ls -1 $NVM_DIR/versions/node | tail -1)/bin:$PATH"

  # Lazy load function
  nvm() {
    unset -f nvm node npm npx
    \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
    nvm "$@"
  }
  node() {
    unset -f nvm node npm npx
    \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
    node "$@"
  }
  npm() {
    unset -f nvm node npm npx
    \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
    npm "$@"
  }
  npx() {
    unset -f nvm node npm npx
    \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
    npx "$@"
  }
fi

# hledger
export LEDGER_FILE=$HOME/Dropbox/Finances/main.journal    # use this file by default

# Browser configuration - cross-platform
if [[ -n "$IS_WSL" || -n "$WSL_DISTRO_NAME" ]]; then
    # WSL environment
    export BROWSER="/mnt/c/Program Files/BraveSoftware/Brave-Browser/Application/brave.exe"
    # export DISPLAY="$(hostname).local:0.0"
    export DISPLAY=$(cat /etc/resolv.conf | grep nameserver | awk '{print $2; exit;}'):0.0
    export LIBGL_ALWAYS_INDIRECT=0
elif [[ "$(uname -s)" == "Darwin" ]]; then
    # macOS
    export BROWSER="open"
else
    # Linux - try common browsers
    if command -v brave &> /dev/null; then
        export BROWSER="brave"
    elif command -v brave-browser &> /dev/null; then
        export BROWSER="brave-browser"
    elif command -v firefox &> /dev/null; then
        export BROWSER="firefox"
    elif command -v chromium &> /dev/null; then
        export BROWSER="chromium"
    else
        export BROWSER="xdg-open"
    fi
fi

# paste with <p> in vi-mode zsh with tmux support
typeset -g ZSH_SYSTEM_CLIPBOARD_TMUX_SUPPORT='true'

# nix
export NIXPKGS_ALLOW_UNSUPPORTED_SYSTEM=1

# emacs
export INSIDE_EMACS=t

# pdflatex - macOS-specific path
if [[ "$(uname -s)" == "Darwin" ]]; then
    export PATH=$PATH:/Library/TeX/texbin
fi

# ai - using agenix with SSH keys for consistent secret management
export RAGE_BIN=/etc/profiles/per-user/morph/bin/rage
export AGE_IDENTITY_FILE=$HOME/.ssh/id_ed25519
export OPENAI_AGE_FILE=$HOME/nix/secrets/openai.age
export DIRENV_LOG_FORMAT="" 

